<% layout("/layouts/boilerplate") %>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .filter a {
    text-decoration: none;
    color: black;
    opacity: 0.6;
  }
  .filter a:hover {
    opacity: 1;
    cursor: pointer;
  }
  .tax-info {
    display: none;
  }
  .tax-toggle {
    border: 1px solid gray;
    border-radius: 1rem;
    padding: 1rem 1rem;
    height: 3.5rem;
    margin-left: auto;
    margin-top: 1.5rem;
  }
</style>

<div id="filters">
  <div class="filter">
    <a href="/listings?category=Trending">
      <div><i class="fa-solid fa-fire"></i></div>
      <p><b>Trending</b></p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings?category=Rooms">
      <div><i class="fa-solid fa-bed"></i></div>
      <p><b>Rooms</b></p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings?category=IconicCities">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p><b>Iconic cities</b></p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings?category=Mountains">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p><b>Mountains</b></p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings?category=Castles">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p><b>Castles</b></p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings?category=AmazingPools">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p><b>Amazing Pools</b></p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings?category=Camping">
      <div><i class="fa-solid fa-tents"></i></div>
      <p><b>Camping</b></p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings?category=Farms">
      <div><i class="fa-solid fa-cow"></i></div>
      <p><b>Farms</b></p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings?category=Arctic">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p><b>Arctic</b></p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings?category=Boats">
      <div><i class="fa-solid fa-ship"></i></div>
      <p><b>Boats</b></p>
    </a>
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Display Total after Taxes</label
      >
    </div>
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings){ %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#x20B9; <%= listing.price.toLocaleString("en-IN") %> / night
          <i class="tax-info">&nbsp; + 18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  let taxToggle = document.getElementById("switchCheckDefault");
  taxToggle.addEventListener("click", () => {
    taxInfo = document.querySelectorAll(".tax-info");
    for (info of taxInfo) {
      if (taxToggle.checked) {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
