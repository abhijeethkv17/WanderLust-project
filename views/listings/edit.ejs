<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <br /><br />
    <h2>Edit your Listing</h2>
    <form
      method="post"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input
          type="text"
          value="<%= listing.title %>"
          name="listing[title]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Title is required</div>
      </div>

      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea
          type="text"
          name="listing[description]"
          class="form-control"
          required
        >
<%= listing.description %></textarea
        >
        <div class="invalid-feedback">Enter a short description</div>
      </div>

      <div class="mb-3">
        Original Listing Image<br />
        <img src="<%= originalImageUrl %>" alt="listing_image" />
      </div>

      <div class="mb-3">
        <lable for="image" class="form-label">Upload New Image</lable>
        <input type="file" name="listing[image]" class="form-control" />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-label">Price</lable>
          <input
            type="number"
            value="<%= listing.price %>"
            name="listing[price]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a valid Price</div>
        </div>

        <div class="mb-3 col-md-8">
          <lable for="country" class="form-label">Country</lable>
          <input
            type="text"
            value="<%= listing.country %>"
            name="listing[country]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a valid Country Name</div>
        </div>
      </div>

      <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input
          type="text"
          value="<%= listing.location %>"
          name="listing[location]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter a valid Location</div>
      </div>

      <button class="btn btn-dark add-btn">Edit</button>
      <br /><br />
    </form>
  </div>
</div>
